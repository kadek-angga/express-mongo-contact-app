<div class="container mt-4">
  <div class="row">
    <div class="col-md8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Contact has not found! <br />
        <a href="/contact" class="alert-link fw-light"
          >&laquo; Back to list contact menu</a
        >
      </div>
      <% } else { %>
      <div class="card" style="width: 18rem">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary">
            <%= contact.phone_number %>
          </h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.name %>" class="btn btn-info badge"
            >Edit</a
          >
          <!-- <a
            href="/contact/delete/<%= contact.name %>"
            class="btn btn-danger badge"
            onclick="return confirm('Are you sure to delete?')"
            >Delete
          </a> -->
          <form class="d-inline" action="/contact?_method=DELETE" method="POST">
            <input type="hidden" name="name" value="<%= contact.name %>" />
            <button
              type="submit"
              class="btn btn-danger badge"
              onclick="return confirm('Are you sure to delete?')"
            >
              Delete
            </button>
          </form>
          <a href="/contact" class="card-link d-block mt-3"
            >&laquo; Back to list contact menu</a
          >
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
